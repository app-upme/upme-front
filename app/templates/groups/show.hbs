<div class="l-whiteframe">
  <div class="l-whiteframe-header">
    <p class="lead-text">
      {{t 'pages.groups.show.title' group=model.name}}
    </p>
  </div>
</div>

<div class="l-whiteframe">
  <div class="l-whiteframe-header">
    <p class="lead-text">
      {{t 'pages.groups.show.users'}}
    </p>

    <div class="l-whiteframe-header-content">
      <div class="search-field">
        <input type="text" class="search-input" placeholder="{{t 'pages.groups.show.placeholders.search'}}">
        <a href="#" class="search-btn"> <i class="icon-search"></i> </a>
      </div>
    </div>
  </div>

  <div class="l-whiteframe-content">
    {{user/user-list users=model.users}}
  </div>
</div>

{{#app-dialog open=open title=(t 'pages.groups.show.dialog.title')}}
  {{form-user}}
{{/app-dialog}}

{{button-fab icon='x' classes='fab-secondary' sendAction=(action 'deleteGroup' model.id)}}
{{button-fab icon='+' sendAction=(action 'openCreateNewUserDialog')}}