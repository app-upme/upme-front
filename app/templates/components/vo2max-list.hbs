<table class="table">
  <thead>
    <th><td> # </td></th>
    <th class="is-hide-on-mobile"> <td> Data </td></th>
    <th><td> Distância </td></th>
    <th class="is-hide-on-mobile"> <td> Velocidade Média </td></th>
    <th><td> Cassificação </td></th>
    <th class="is-hide-on-mobile"><td> Resultado </td></th>
    <th><td> Ações </td></th>
  </thead>
  <tbody>
    {{#each trainings as |training|}}

      <tr>
        <td> {{training.id}} </td>
        <td class="is-hide-on-mobile"> {{training.training_date}} </td>
        <td> {{training.distance}} </td>
        <td class="is-hide-on-mobile"> {{training.average_speed}} </td>
        <td> {{training.ranking}} </td>
        <td class="is-hide-on-mobile"> {{training.result}} </td>
        <td align="center">
          <span data-tooltip="Excluir teste">
            <i class="icon-clear is-alert-icon" {{action 'deleteTraining' training.user.id training.id}}></i>
          </span>
        </td>
      </tr>

    {{else}}
      <tr>
        <td colspan="6" align="center"> Sem treinos cadastrados </td>
      </tr>
    {{/each}}
  </tbody>
</table>