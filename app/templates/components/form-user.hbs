<form {{action 'createUser' on="submit"}}>
  <div class="form-group">
    {{input value=name class='form-control' placeholder=(t 'components.form-user.placeholders.name')}}
  </div>

  <div class="form-group">
    {{input value=email type='email' class='form-control' placeholder=(t 'components.form-user.placeholders.email')}}
  </div>

  <div class="form-group">
    {{input value=startTrainingAt type='date' class='form-control'}}
  </div>

  <button class="btn btn-primary btn-block" type="submit"> {{t 'components.form-user.buttons.submit'}} </button>
</form>
