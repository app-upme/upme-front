<form {{action 'createTraining' on="submit"}}>
  <div class="form-group">
    <label for="trainingDate"> {{t 'components.form-vo2max.labels.distance'}} </label>
    {{input value=distance required=true class='form-control' placeholder=(t 'components.form-vo2max.placeholders.distance')}}
  </div>

  <div class="form-group">
    <label for="trainingDate"> {{t 'components.form-vo2max.labels.training_date'}} </label>
    {{input value=trainingDate required=true name='trainingDate' type='date' class='form-control'}}
  </div>

  <button class="btn btn-primary btn-block" type="submit"> {{t 'components.form-vo2max.buttons.submit'}} </button>
</form>