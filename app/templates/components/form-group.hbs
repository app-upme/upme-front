<form {{action 'createGroup' on="submit"}}>
  <div class="form-group">
    {{input value=name class='form-control' placeholder=(t 'components.form-group.placeholders.name')}}
  </div>

  <div class="form-group">
    {{textarea value=description class='form-control' placeholder=(t 'components.form-group.placeholders.description')}}
  </div>

  <button class="btn btn-primary btn-block" type="submit"> {{t 'components.form-group.buttons.submit'}} </button>
</form>
